generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Session {
  id        Int        @id @default(autoincrement())
  startTime DateTime
  endTime   DateTime   @default("9999-12-31T23:59:59Z")
  userId    String     @db.VarChar(255)
  pomodoros Pomodoro[]

  @@index([userId])
  @@map("sessions")
}

model Pomodoro {
  id        Int      @id @default(autoincrement())
  startTime DateTime
  endTime   DateTime
  sessionId Int
  Session   Session  @relation(fields: [sessionId], references: [id])

  @@index([sessionId])
  @@map("pomodoros")
}
